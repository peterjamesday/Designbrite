<div class="form">
	
<%= form_for @design do |f| %>
	<div class="center-form">
		<%= f.label :name, "Name of design", :class => "label-class" %>
		<%= f.text_field :name %>
	</div>
		<br>
		<dl>
	<label class="checkbox inline">
	<dt>design</dt>
	<dd><%= f.check_box :remove_logo, {}, true, false  %>
		<%= f.label :remove_logo, "Remove Logo" %>
		
	
		<%= f.check_box :hide_contact_host, {}, true, false %>
		<%= f.label :hide_contact_host, "Hide Contact Host Banner on New Event" %></dd>
		<dt>other</dt>
		<dd><%= f.check_box :hide_save_event, {}, true, false %>
		<%= f.label :hide_save_event, "Hide Save Event Button" %>
		
		<%= f.check_box :hide_share_options, {}, true, false %>
		<%= f.label :hide_share_options, "Hide Share Options" %>
	
		<%= f.check_box :remove_event_header, {}, true, false %>
		<%= f.label :remove_event_header, "Remove Event Header" %>
	
		<%= f.check_box :remove_title, {}, true, false %>
		<%= f.label :remove_title, "Remove Title from Event Page, Keep Date" %></dd>
		
	</label>
	</dl>
	<br>
	<div class="center-form">
	<%= f.submit "Submit", :class => 'btn btn-primary' %>
	</div>
	
	

<% end %>
</div>

