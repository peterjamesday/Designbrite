<% if @design.background_image != "" %>
	/*---add background image---*/
	body {
		background-image:url("<%= @design.background_image %>");
	<% if @design.background_image_repeat == true %>
		background-repeat: repeat;
	<% else %>
		background-repeat: no-repeat;
	<% end %>
	<% if @design.background_image_position == true %>
		background-position: fixed;
	<% else %>
		background-position: relative;
	<% end %>
	<% if @design.background_image_size == true %>
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
		<% end %>
	}
<% end %>
<% if @design.remove_logo == true %>
	/*---hide logo on event page, shows in search---*/
	.event_title_image {
		visibility: hidden;
		height: 5px
	}
<% end %>
<% if @design.hide_contact_host == true %>
	/*---hide contact host banner---*/
	#eb_header_container { 
		display: none; 
	}  
<% end %>
